<Window x:Class="PMSManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PMSManager.ViewModels;assembly=PMSManager"
        xmlns:views="clr-namespace:PMSManager.Views"
        Title="Sales Transaction Manager"
        Height="450"
        Width="800">

    <DockPanel>
        <!-- Header -->
        <TextBlock Text="Sales Transaction Manager"
               FontSize="24"
               FontWeight="Bold"
               Foreground="DarkSlateGray"
               Background="LightSteelBlue"
               HorizontalAlignment="Center"
               Padding="10"
               DockPanel.Dock="Top"
               TextAlignment="Center"/>

        <!-- Navigation Buttons -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="LightSeaGreen" Height="50">
            <Button Content="List Sales Transaction" Width="180" Margin="5" Command="{Binding ShowListViewCommand}" />
            <Button Content="Add New Sales Transaction" Width="200" Margin="5" Command="{Binding ShowAddViewCommand}" />
            <Button Content="Exit" Width="100" Margin="5" Command="{Binding ExitCommand}" />
        </StackPanel>

        <!-- View Content -->
        <ContentControl Content="{Binding CurrentViewModel}" />
    </DockPanel>
</Window>